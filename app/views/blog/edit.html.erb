<h1> Edit your blog here </h1>

<%= form_with model: @blog, method: :patch, local: true do |form| %>
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
    <br>
    <br>
    <%= form.label :content %>
    <br>
    <%= form.text_field :content %>
    <br>
    <br>
    <%= form.submit "Update Blog!" %>
<% end %>